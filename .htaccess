# URL Rewriting for SEO-friendly redirects
RewriteEngine On

# Redirect /u to redirect.html with query parameters
RewriteCond %{QUERY_STRING} .
RewriteRule ^u$ redirect.html [L]

# Redirect slug URLs to redirect.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/(admin\.html|redirect\.html|index\.html)$
RewriteRule ^([a-z0-9\-]+)/?$ redirect.html [L]

# Default document
DirectoryIndex index.html